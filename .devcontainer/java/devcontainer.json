{
    "name": "Java",
    "image": "mcr.microsoft.com/devcontainers/java:17",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/server/java",
    "forwardPorts": [
        8080
    ],
    "portsAttributes": {
        "8080": {
            "label": "Java",
            "onAutoForward": "openBrowserOnce"
        }
    },
    "secrets": {
        "PAYPAL_CLIENT_ID": {
            "description": "Sandbox client ID of the application.",
            "documentationUrl": "https://developer.paypal.com/dashboard/applications/sandbox"
        },
        "PAYPAL_CLIENT_SECRET": {
            "description": "Sandbox secret of the application.",
            "documentationUrl": "https://developer.paypal.com/dashboard/applications/sandbox"
        }
    },
    "containerEnv": {
        "BASE_URL": "https://api-m.sandbox.paypal.com"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vsls-contrib.codetour",
                "PayPal.vscode-paypal",
                "vscjava.vscode-java-pack"
            ]
        },
        "settings": {
            "git.openRepositoryInParentFolders": "always"
        },
        "codespaces": {
            "openFiles": [
                "README.md"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17",
            "installMaven": "true"
        }
    },
    "postCreateCommand": "cd /workspaces/fastlane-sample-application/server && cp .env.example java/.env && cd java && mvn clean install",
    "postAttachCommand": "mvn spring-boot:run"
}